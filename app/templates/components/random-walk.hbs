<div class="ui row">
    <div class="ui items">
        <div class="item">
            <div class="content">
                <a onclick={{action "interested"}} href="http://reddit.com/r/{{subreddit.name}}" target="_blank" class="header">r/{{subreddit.name}}</a>
                <div class="description">
                    <p style="width:800px; margin-left: auto; margin-right: auto;">{{subreddit.public_description}}</p>
                    <div class="meta">
                        <span class="subs">{{subreddit.subscribers}} subscribers</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="ui row">
    <div style="display: inline; padding-right: 6em;">
        <a {{action "handlePrevious"}} href="#">
            <i style="opacity: 0.7" class="huge violet left floated chevron left icon"></i>
        </a>
    </div>
    <button {{action "handleNext"}} class="ui massive violet button">Random Subreddit</button>
    <div style="display: inline; padding-left: 6em;">
        <a {{action "handleNext"}} href="#">
            <i style="opacity: 0.7" class="huge violet right floated chevron right icon"></i>
        </a>
    </div>
</div>
<div style="margin-left: 35em; margin-top: 4em;" class="ui row">
    <div class="ui center aligned statistics">
        <div class="green statistic">
            <div class="value">{{positive}}</div>
            <div class="label">Liked</div>
        </div>
        <div class="yellow statistic">
            <div class="value">{{negative}}</div>
            <div class="label">Disliked</div>
        </div>
    </div>
</div>
